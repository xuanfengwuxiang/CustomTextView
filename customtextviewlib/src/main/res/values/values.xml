<resources>

    <!--自定义TextView使用的属性-->
    <declare-styleable name="CustomTextView">

        <!--正常状态-->
        <attr name="stroke_radius" format="dimension"/>
        <attr name="stroke_width" format="dimension"/>
        <attr name="topLeftRadius" format="dimension"/>
        <attr name="topRightRadius" format="dimension"/>
        <attr name="bottomLeftRadius" format="dimension"/>
        <attr name="bottomRightRadius" format="dimension"/>
        <attr name="stroke_color" format="color|reference"/>
        <attr name="solid_color" format="color|reference"/>


        <!--按压状态-->
        <attr name="stroke_press_color" format="color|reference"/>
        <attr name="solid_press_color" format="color|reference"/>
        <attr name="text_press_color" format="color|reference"/>

        <!--背景形状-->
        <attr name="shapeTpe" format="enum">
            <enum name="rectangle" value="0"/>
            <enum name="oval" value="1"/>
            <enum name="line" value="2"/>
            <enum name="ring" value="3"/>
        </attr>


    </declare-styleable>
</resources>
